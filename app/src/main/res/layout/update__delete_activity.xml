<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">


    <TextView
        android:id="@+id/updatedeletetxtview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="Update_Delete_Form : "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/updatetxtview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/updatedeletetxtview"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:text="Name : "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/updatetxtview_mobno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/updatetxtview_name"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:text="Mob No : "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/updatetxtview_clg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/updatetxtview_mobno"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:text="College : "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/updatetxtview_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/updatetxtview_clg"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:text="Address : "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/updateEdtText_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updatedeletetxtview"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/updatetxtview_name"
        android:paddingLeft="30dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/updateEdtText_mobno"
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updatetxtview_name"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/updatetxtview_mobno"
        android:paddingLeft="30dp"
        android:inputType="phone"
        android:maxLength="10"/>

    <EditText
        android:id="@+id/updateEdtText_clg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updatetxtview_mobno"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/updatetxtview_clg"
        android:paddingLeft="30dp"
        android:inputType="text"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/updateEdtText_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updatetxtview_clg"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/updatetxtview_add"
        android:paddingLeft="30dp" />

    <Button
        android:id="@+id/btn1Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateEdtText_add"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="40dp"
        android:text="Update" />

    <Button
        android:id="@+id/btn2Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateEdtText_add"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="40dp"
        android:text="Delete" />

</RelativeLayout>